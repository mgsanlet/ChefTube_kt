<resources>

    <style name="ChefTubeText">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ChefTubeText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChefTubeText.Subtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChefTubeText.Body">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChefTubeText.Detail">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChefTubeText.Component">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

        <style name="ChefTubeEditText">
            <item name="android:textAppearance">@style/ChefTubeText.Component</item>
            <item name="android:textColorHint">@color/hint</item>
            <item name="android:background">@drawable/shape_round_corner_15</item>
            <item name="android:backgroundTint">@color/primary_green</item>
            <item name="android:padding">10dp</item>
            <item name="android:paddingStart">16dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">48dp</item>
            <item name="android:layout_width">wrap_content</item>

        </style>

        <style name="ChefTubeButton" parent="android:Widget.Button">
            <item name="android:textAppearance">@style/ChefTubeText.Component</item>
            <item name="android:textSize">16sp</item>
            <item name="android:background">@drawable/shape_round_corner_45</item>
            <item name="android:textAlignment">center</item>
            <item name="android:backgroundTint">@null</item>
            <item name="backgroundTint">@null</item>
            <item name="android:textColor">@color/white</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">48dp</item>
            <item name="android:padding">10dp</item>

        </style>

            <style name="ChefTubeButton.Positive">
                <item name="android:backgroundTint">@color/primary_orange</item>
            </style>

            <style name="ChefTubeButton.Negative">
                <item name="android:backgroundTint">@color/dark_red</item>
            </style>

        <style name="ChefTubeRadioButton" parent="android:Widget.CompoundButton">
            <item name="android:textColor">@color/white</item>
            <item name="android:textAppearance">@style/ChefTubeText.Component</item>
            <item name="android:button">@drawable/selector_radiobutton</item>
            <item name="buttonTint">@color/white</item>

            <item name="android:textAlignment">textStart</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:paddingStart">16dp</item>
            <item name="android:paddingEnd">16dp</item>

        </style>

    <style name="ChefTubeDialog">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@drawable/shape_round_corner_15</item>
        <item name="android:backgroundTint">@color/dark_green</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ChefTubeTopMenu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="actionOverflowButtonStyle">@style/ChefTubeMenuOverflow</item>
    </style>

    <style name="ChefTubeMenuOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_horizontal_lines_30</item>
    </style>
</resources>